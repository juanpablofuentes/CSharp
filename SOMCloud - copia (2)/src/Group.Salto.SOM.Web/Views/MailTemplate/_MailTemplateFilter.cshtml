@using Group.Salto.Common.Constants.MailTemplate
@using Group.Salto.Common.Constants
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.ServiceLibrary.Helpers
@using Group.Salto.SOM.Web.Models.MailTemplate
@using Group.Salto.Controls.Table
@using Group.Salto.Common.Enums;
@model MailTemplateFilterViewModel

<div>

    <partial model="@Model.FilterHeader" name="_FilterHeader" />
    <div class="collapse in" id="filterMailTemplate">
        <form asp-action="Filter" asp-controller="MailTemplate" method="post" id="filter-form" class="form-control">
            <partial model="Model" name="_PagerHiddens" />
            <partial model="Model" name="_MultiTableHiddens" />
            <div class="row">
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@MailTemplateConstant.MailTemplateFilterName"></span>
                    </label>
                    <input asp-for="Name" id="FilterName" class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(MailTemplateConstant.MailTemplateFilterPlaceholderName)" />
                </div>


                <div class="col-lg-12">
                    <div class="pull-right">
                        <br>
                        <button type="button" id="btnClear" class="btn btn-outline-danger" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                        <button id="btnApplyFilter" class="btn btn-primary" name="btnApplyFilter" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>