@using Group.Salto.Common.Constants
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.SOM.Web.Models.Account

@model ResultViewModel<ForgotPasswordViewModel>
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@section Styles{
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
}

<div id="block-forgot">
    <div id="forgot-form" class="card">
        <div class="card-body">
            <div class="text-center">
                <span class="fa-4x">
                    <i class="fa fa-lock"></i>
                </span>
                <h2 class="card-title text-center" asp-localized-key="ForgotPasswordFormTextTitle">Forgot Password?</h2>
                <p class="card-text" asp-localized-key="ForgotPasswordFormText"></p>
                <div class="panel-body">
                    <form asp-controller="Account" id="register-form" autocomplete="off" class="form" asp-action="ForgotPassword" method="post">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-envelope icons"></i>
                                </span>
                            </div>
                            <input asp-for=Data.Email class="form-control" placeholder="@Html.GetLocalizedText(AccountConstants.ForgotPasswordEmailFormPlaceHolder)" />
                            <span asp-validation-for="Data.Email" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="@Html.GetLocalizedText(AccountConstants.ForgotPasswordButtonResetPassword)" type="submit">
                            </div>
                        </div>
                        <input type="hidden" class="hide" name="token" id="token" value="">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

