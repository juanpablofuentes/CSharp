@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Calendar
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Calendar;
@model CalendarBaseViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="card border-info">
            <div class="card-body">
                <input type="hidden" class="form-control" asp-for="IsPrivate" value="false" />
                @if (Model != null && Model.Id != 0)
                {
                    <div class="form-group row">
                        <label asp-localized-key="@CalendarsConstants.CalendarIdentifierText" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Id" readonly />
                        </div>
                    </div>
                }

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@CalendarsConstants.CalendarNameText"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Name"
                               placeholder="@Html.GetLocalizedText(CalendarsConstants.CalendarNamePlaceholder)" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@CalendarsConstants.CalendarDescriptionText"></span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Description"
                               placeholder="@Html.GetLocalizedText(CalendarsConstants.CalendarDescriptionPlaceholder)" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@CalendarsConstants.CalendarColorTitle"></span>
                    </label>
                    <div class="col-sm-8" id="colorPickerContainer">
                        <input type="text" id="colorPickerInput" asp-for="Color" placeholder="@LocalizationsConstants.SelectColor"
                               style="background-color: @Model?.Color;" readonly>
                        <div id="colorPicker"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group row text-right">
    <div class="col-12">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Calendar")'"></button>
        <input id="btnSaveGlobalCalendar" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>