@using Group.Salto.SOM.Web.Models.Origins
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Extensions;
@using Group.Salto.Common.Constants;
@using Group.Salto.Common.Constants.Origins;
@using Group.Salto.Common.Enums

@model ResultViewModel<OriginDetailViewModel>

@{
    var title = Html.GetLocalizedText(OriginsConstants.OriginsEditPageTitle);
    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var claimUserConfigurationId = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(AppIdentityClaims.UserId);
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-6">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2> <span asp-localized-key="@OriginsConstants.OriginsEditPageTitle"></span>&nbsp;<small class="text-muted">#@Model.Data.Id</small></h2>
            </div>
            <div class="card-body">
                <form asp-controller="Origins" asp-action="Edit" method="post" class="form-horizontal">
                    <partial name="_OriginsForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/Common/authorization.js"></script>

    <script>
        (function($) {
            $(document).ready(function() {
                var saveEdit = @Html.CanDoAction(claimUserConfigurationId, ActionGroupEnum.Origin, ActionEnum.Update).ToString().ToLower();
                app.common.authorization.disable("btnSaveOrigins", saveEdit);
            });
        })(jQuery);
    </script>
}