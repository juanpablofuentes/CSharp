@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Rol
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Rol
@model RolFilterViewModel
<div>
    <partial model="@Model.FilterHeader" name="_FilterHeader" />
    <div class="collapse in" id="filterRol">
        <form asp-action="Filter" asp-controller="Rol" method="post" id="filter-form" class="form-control">
            <partial model="Model" name="_PagerHiddens" />
            <partial model="Model" name="_MultiTableHiddens" />
            <div class="row">
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@RolConstants.RolFilterName"></span>
                    </label>
                    <input asp-for="Name" id="RolFilterName"
                           class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(RolConstants.RolFilterName)" />
                </div>
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@RolConstants.RolFilterDescription"></span>
                    </label>
                    <input asp-for="Description" id="RolFilterDescription"
                           class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(RolConstants.RolFilterDescription)" />
                </div>
                <div class="col-lg-12">
                    <div class="pull-right">
                        <br>
                        <button type="button" class="btn btn-outline-danger" id="btnClear" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                        <button id="btnApplyFilter" name="btnApplyFilter" class="btn btn-primary" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>