@using Group.Salto.Common.Constants.Rol
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Rol

@model RolEditViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        @if (Model.Id != 0)
        {
            <div class="form-group row">
                <label class="col-sm-4">
                    <span asp-localized-key="@RolConstants.RolIdForm"></span>
                </label>
                <div class="col-sm-8">
                    <input asp-for="Id"
                           class="form-control" readonly="readonly"
                           placeholder="@Html.GetLocalizedText(RolConstants.RolIdFormPlaceholder)" />
                </div>
            </div>
        }
        <div class="form-group row">
            <label class="col-sm-4">
                <span asp-localized-key="@RolConstants.RolNameForm"></span><span class="required">*</span>
            </label>
            <div class="col-sm-8">
                <input asp-for="Name"
                       class="form-control"
                       placeholder="@Html.GetLocalizedText(RolConstants.RolNameFormPlaceholder)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4">
                <span asp-localized-key="@RolConstants.RolDescriptionForm"></span><span class="required">*</span>
            </label>
            <div class="col-sm-8">
                <input asp-for="Description"
                       class="form-control"
                       placeholder="@Html.GetLocalizedText(RolConstants.RolDescriptionFormPlaceholder)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="col-12 col-sm-6">
        <div class="row">
            <label class="col-sm-3">
                <span asp-localized-key="@RolConstants.RolActionForm"></span>
            </label>
            <div class="col-sm-9">
                <partial name="_MultiSelectControl" for="@Model.ActionRoles" />
            </div>
        </div>

    </div>
</div>