@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.PointRate
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.PointRate

@model PointRateViewModel

@Html.Hidden("Id")
<div class="form-group row">
    <label class="col-md-3 col-form-label" asp-for="Name"><span asp-localized-key="@PointRateConstants.PointRateGridTheadName"></span><span class="required">*</span></label>
    <div class="col-md-9">
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-localized-key="@PointRateConstants.PointRateGridTheadDescription" class="col-md-3 col-form-label" asp-for="Description">Description</label>
    <div class="col-md-9">
        <input asp-for="Description" rows="9" class="form-control"></input>
    </div>
</div>
<div class="form-group row">
    <label asp-localized-key="@PointRateConstants.PointRateGridTheadErpReference" class="col-md-3 col-form-label" asp-for="ErpReference">ErpReference</label>
    <div class="col-md-9">
        <input asp-for="ErpReference" rows="9" class="form-control"></input>
    </div>
</div>
<div class="form-group row text-right">
    <div class="col-12">
        <button type="reset" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "PointRate")'">
            <span asp-localized-key="ActionsDetailsBtnCancel"></span>
        </button>
        <input id="btnSavePointRate" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>