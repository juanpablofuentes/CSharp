@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.WorkOrder
@using Group.Salto.SOM.Web.Models.WorkOrder
@using Group.Salto.SOM.Web.Extensions
@model WorkOrderGenericEditViewModel
<div class="row">
    <div class="col-12 col-sm-4">

        <div class="form-group">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditCreationDate"></span>&nbsp;</label>
            <input type="text" asp-for="CreationDate" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditCreationDate)" autocomplete="off" />
            <span asp-validation-for="CreationDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditPickUpTime"></span>&nbsp;</label>
            <input asp-for="PickUpTime" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditPickUpTime)" autocomplete="off" />
            <span asp-validation-for="PickUpTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditAssignmentDate"></span>&nbsp;</label>
            <input asp-for="AssignmentDate" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditAssignmentDate)" autocomplete="off" />
            <span asp-validation-for="AssignmentDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditActuationDate"></span>&nbsp;</label>
            <input asp-for="ActuationDate" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditActuationDate)" autocomplete="off" />
            <span asp-validation-for="ActuationDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditActuationEndDate"></span>&nbsp;</label>
            <input asp-for="ActuationEndDate" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditActuationEndDate)" autocomplete="off" />
            <span asp-validation-for="ActuationEndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-4">
        @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
        {
            <div class="form-group">
                <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditFinalClientClosingTime"></span>&nbsp;</label>
                <input asp-for="FinalClientClosingTime" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditFinalClientClosingTime)" autocomplete="off" />
                <span asp-validation-for="FinalClientClosingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditInternalClosingTime"></span>&nbsp;</label>
                <input asp-for="InternalClosingTime" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditInternalClosingTime)" autocomplete="off" />
                <span asp-validation-for="InternalClosingTime" class="text-danger"></span>
            </div>
        }
        
        <div class="form-group row mb-0">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditIsActuationDateFixed"></span></label>
            <div class="col">
                <label class="switch switch-label switch-pill switch-primary">
                    <input asp-for="IsActuationDateFixed" type="checkbox" class="switch-input">
                    <span class="switch-slider" data-checked="@Html.GetLocalizedText(LocalizationsConstants.Yes)" data-unchecked="@Html.GetLocalizedText(LocalizationsConstants.No)"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4">
        <div class="form-group d-none" id="DateResponseSLA">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditDateResponseSLA"></span>&nbsp;<span class="required">*</span></label>
            <input asp-for="DateResponseSLA" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditDateResponseSLA)" autocomplete="off" />
            <input asp-for="DateResponseSLAVisible" type="hidden" />
            <span asp-validation-for="DateResponseSLA" class="text-danger"></span>
        </div>

        <div class="form-group d-none" id="DateResolutionSLA">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditDateResolutionSLA"></span>&nbsp;<span class="required">*</span></label>
            <input asp-for="DateResolutionSLA" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditDateResolutionSLA)" autocomplete="off" />
            <input asp-for="DateResolutionSLAVisible" type="hidden" />
            <span asp-validation-for="DateResolutionSLA" class="text-danger"></span>
        </div>

        <div class="form-group d-none" id="DateUnansweredSLAPenalty">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditDateUnansweredSLAPenalty"></span>&nbsp;<span class="required">*</span></label>
            <input asp-for="DateUnansweredSLAPenalty" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditDateUnansweredSLAPenalty)" autocomplete="off" />
            <input asp-for="DateUnansweredSLAPenaltyVisible" type="hidden" />
            <span asp-validation-for="DateUnansweredSLAPenalty" class="text-danger"></span>
        </div>

        <div class="form-group d-none" id="DateWithoutPenaltyResolutionSLA">
            <label><span asp-localized-key="@WorkOrderConstants.WorkOrderEditDateWithoutPenaltyResolutionSLA"></span>&nbsp;<span class="required">*</span></label>
            <input asp-for="DateWithoutPenaltyResolutionSLA" class="form-control" placeholder="@Html.GetLocalizedText(WorkOrderConstants.WorkOrderEditDateWithoutPenaltyResolutionSLA)" autocomplete="off" />
            <input asp-for="DateWithoutPenaltyResolutionSLAVisible" type="hidden" />
            <span asp-validation-for="DateWithoutPenaltyResolutionSLA" class="text-danger"></span>
        </div>
    </div>
</div>