        </div>

        <div id="standardWarrantyEndDate" class="som-panel">
            <div class="som-panel-title">
                <span asp-localized-key="@WorkOrderConstants.WorkOrderAssetsStandardWarrantyEndDate"></span>
            </div>
            <div class="som-panel-text">
                <p>@Model.StandardWarrantyEndDate</p>
            </div>
        </div>

        <div id="manufacturerWarranty" class="som-panel">
            <div class="som-panel-title">
                <span asp-localized-key="@WorkOrderConstants.WorkOrderAssetsManufacturerWarranty"></span>
            </div>
            <div class="som-panel-text">
                <p>@Model.ManufacturerWarranty</p>
            </div>
        </div>

        <div id="manufacturerWarrantyStartDate" class="som-panel">
            <div class="som-panel-title">
                <span asp-localized-key="@WorkOrderConstants.WorkOrderAssetsManufacturerWarrantyStartDate"></span>
            </div>
            <div class="som-panel-text">
                <p>@Model.ManufacturerWarrantyStartDate</p>
            </div>
        </div>

        <div id="manufacturerWarrantyEndDate" class="som-panel">
            <div class="som-panel-title">
                <span asp-localized-key="@WorkOrderConstants.WorkOrderAssetsManufacturerWarrantyEndDate"></span>
            </div>
            <div class="som-panel-text">
                <p>@Model.ManufacturerWarrantyEndDate</p>
            </div>
        </div>

    </div>
</div>