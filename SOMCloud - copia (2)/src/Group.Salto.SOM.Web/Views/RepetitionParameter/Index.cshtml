@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.RepetitionParameter
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Models.RepetitionParameter;

@model ResultViewModel<RepetitionParameterDetailsViewModel>
@{
    var title = @Html.GetLocalizedText(RepetitionParameterConstants.RepetitionParameterEditPageTitle);
    ViewData["Title"] = title;
}
<div class="row justify-content-center">
    <div class="col-12 col-sm-9">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2><span asp-localized-key="@RepetitionParameterConstants.RepetitionParameterEditPageTitle"></span>&nbsp;</h2>
            </div>
            <div class="card-body">
                <form asp-controller="RepetitionParameter" asp-action="Index" method="post" class="form-horizontal">
                    <partial name="_RepetitionParameterForms" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>