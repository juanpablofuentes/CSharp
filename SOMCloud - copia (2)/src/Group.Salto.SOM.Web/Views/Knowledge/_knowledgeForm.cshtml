@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Knowledge
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Knowledge

@model KnowledgeViewModel

@Html.HiddenFor(m => m.Id, new { Id = "id" })
<div class="form-group row">
    <label class="col-md-3 col-form-label" asp-for="Name"><span asp-localized-key="KnowledgeFilterFieldName"></span><span class="required">*</span></label>
    <div class="col-md-9">
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-localized-key="KnowledgeFilterFieldDescription" class="col-md-3 col-form-label" asp-for="Description">Description</label>
    <div class="col-md-9">
        <textarea asp-for="Description" rows="9" class="form-control"></textarea>
    </div>
</div>
<div class="form-group row">
    <label asp-localized-key="KnowledgeFilterFieldObservations" class="col-md-3 col-form-label" asp-for="Observations">Observations</label>
    <div class="col-md-9">
        <textarea asp-for="Observations" rows="9" class="form-control"></textarea>
    </div>
</div>
<div class="form-group row text-right">
    <div class="col-12">
        <button type="reset" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Knowledge")'">
            <span asp-localized-key="ActionsDetailsBtnCancel"></span>
        </button>
        <input id="btnSaveKnowledge" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>