@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.WorkOrderCategory
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.SOM.Web.Models.WorkOrderCategory;
@model WorkOrderCategoryDetailViewModel

@{
    string title = @Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryPageTitle);
    ViewData["Title"] = title;
}

<div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item WOCategory-tab">
                <a class="nav-link active" id="nav-generic-tab" data-toggle="tab" href="#nav-generic" role="tab" aria-controls="nav-generic" aria-selected="true">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryGenericTab)</a>
            </li>
            <li class="nav-item WOCategory-tab">
                <a class="nav-link WOCategory-tab" id="nav-permisions-tab" data-toggle="tab" href="#nav-permisions" role="tab" aria-controls="nav-permisions" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryPermissionsTab)</a>
            </li>
            <li class="nav-item WOCategory-tab">
                <a class="nav-link" id="nav-Technicians-tab" data-toggle="tab" href="#nav-Technicians" role="tab" aria-controls="nav-Technicians" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryTechniciansTab)</a>
            </li>
            <li class="nav-item WOCategory-tab">
                <a class="nav-link" id="nav-CalendarControl-tab" data-toggle="tab" href="#nav-CalendarControl" role="tab" aria-controls="nav-CalendarControl" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryCalendarControlTab)</a>
            </li>
            <li class="nav-item WOCategory-tab">
                <a class="nav-link" id="nav-Knowledge-tab" data-toggle="tab" href="#nav-Knowledge" role="tab" aria-controls="nav-Knowledge" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryKnowledgeTab)</a>
            </li>
            <li class="nav-item WOCategory-tab">
                <a class="nav-link" id="nav-Knowledge-tab" data-toggle="tab" href="#nav-Contacts" role="tab" aria-controls="nav-Contacts" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryContactsTab)</a>
            </li>

            @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
            {
                <li class="nav-item WOCategory-tab" id="nav-calendar-li">
                    <a onclick="setTimeout(function(){ loadScheduler(); }, 500);" class="nav-link" id="nav-calendar-tab" data-toggle="tab" href="#nav-calendar" role="tab" aria-controls="nav-calendar" aria-selected="false">@Html.GetLocalizedText(WorkOrderCategoryConstants.WOCategoryCalendarTab)</a>
                </li>
            }
        </ul>
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-generic" role="tabpanel" aria-labelledby="nav-generic-tab">
                <partial name="_GenericForm" for="GenericEditViewModel" />
            </div>
            <div class="tab-pane fade" id="nav-permisions" role="tabpanel" aria-labelledby="nav-permisions-tab">
                <div class="row">
                    <partial name="_PermissionsForm" for="Permissions" />
                    <partial name="_PermissionsRolesForm" for="Roles" />
                </div>
            </div>
            <div class="tab-pane fade" id="nav-Technicians" role="tabpanel" aria-labelledby="nav-Technicians-tab">
                <partial name="_TechniciansForm" for="GenericEditViewModel" />
            </div>
            <div class="tab-pane fade" id="nav-CalendarControl" role="tabpanel" aria-labelledby="nav-CalendarControl-tab">
                <partial name="_CalendarControlForm" for="GenericEditViewModel" />
            </div>
            <div class="tab-pane fade" id="nav-Knowledge" role="tabpanel" aria-labelledby="nav-Knowledge-tab">
                <partial name="_KnowledgesForm" for="GenericEditViewModel" />
            </div>
            <div class="tab-pane fade" id="nav-Contacts" role="tabpanel" aria-labelledby="nav-Contacts-tab">
                <partial name="_ContactsForm" for="GenericEditViewModel" />
            </div>
            @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
            {
                <div class="tab-pane fade" id="nav-calendar" role="tabpanel" aria-labelledby="nav-calendar-tab">
                    <div class="row">
                        <div class="col-12">
                            <button type="button" class="btn btn-success" data-toggle='modal' data-target='#AddCalendarModal'>
                                <span asp-localized-key="@WorkOrderCategoryConstants.WOCategoryTabCalendarButtonCreateCalendar"></span>
                            </button>
                        </div>
                        <partial name="_Scheduler" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />