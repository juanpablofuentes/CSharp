@using Group.Salto.ServiceLibrary.Common.Dtos.Base
@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Task
@using Group.Salto.SOM.Web.Extensions

@model BaseNameIdDto<int>

<div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item task-tab">
                <a class="nav-link preconditions-tab active" id="nav-preconditions-tab" data-toggle="tab" href="#nav-preconditions-@Model.Id" role="tab" aria-controls="nav-preconditions" aria-selected="true">@Html.GetLocalizedText(TaskConstants.TaskPreconditionsTab)</a>
            </li>
            <li class="nav-item task-tab">
                <a class="nav-link triggers-tab" id="nav-triggers-tab" data-toggle="tab" href="#nav-triggers-@Model.Id" role="tab" aria-controls="nav-triggers" aria-selected="false" data-taskid="@Model.Id">@Html.GetLocalizedText(TaskConstants.TriggersTab)</a>
            </li>
            <li class="nav-item task-tab">
                <a class="nav-link postconditions-tab" id="nav-postconditions-tab" data-toggle="tab" href="#nav-postconditions-@Model.Id" role="tab" aria-controls="nav-postconditions" aria-selected="false">@Html.GetLocalizedText(TaskConstants.PostconditionsTab)</a>
            </li>
            <li class="nav-item task-tab">
                <a class="nav-link workorderderivated-tab" id="nav-workorderderivated-tab" data-toggle="tab" data-taskid="@Model.Id" href="#nav-workorderderivated-@Model.Id" role="tab" aria-controls="nav-workorderderivated" aria-selected="false">@Html.GetLocalizedText(TaskConstants.WorkOrderDerivatedTab)</a>
            </li>
            <li class="nav-item task-tab">
                <a class="nav-link billingrules-tab" id="nav-billingrules-tab" data-toggle="tab" href="#nav-billingrules-@Model.Id" role="tab" aria-controls="nav-billingrules" aria-selected="false" data-taskid="@Model.Id">@Html.GetLocalizedText(TaskConstants.BillingRulesTab)</a>
            </li>
        </ul>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade p-0 show active" id="nav-preconditions-@Model.Id" role="tabpanel" aria-labelledby="nav-preconditions-tab">
                <partial model="Model" name="_PreconditionContainer" />
            </div>
            <div class="tab-pane fade p-0" id="nav-triggers-@Model.Id" role="tabpanel" aria-labelledby="nav-triggers-tab">
                <partial model="Model" name="_TriggerContainer" />
            </div>
            <div class="tab-pane fade p-0" id="nav-postconditions-@Model.Id" role="tabpanel" aria-labelledby="nav-postconditions-tab">
                <partial model="Model" name="_PostConditionContainer" />
            </div>
            <div class="tab-pane fade p-0" id="nav-workorderderivated-@Model.Id" role="tabpanel" aria-labelledby="nav-workorderderivated-tab">
                <partial model="Model" name="_WorkOrderDerivatedContainer" />
            </div>
            <div class="tab-pane fade p-0" id="nav-billingrules-@Model.Id" role="tabpanel" aria-labelledby="nav-billingrules-tab">
                <partial model="Model" name="_BillingRulesContainer" />
            </div>
        </div>
    </div>
</div>