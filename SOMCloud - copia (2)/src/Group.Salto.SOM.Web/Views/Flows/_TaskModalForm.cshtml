@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Flows
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Task
@using Group.Salto.SOM.Web.Models.MultiSelect
@using Group.Salto.SOM.Web.Models.Flows

@model TaskHeaderDetailViewModel

<div class="modal fade" id="modalTask" tabindex="-1" style="display:none;" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-primary" role="document">
        <form asp-controller="task" asp-action="updateTask" method="post" class="form-horizontal">
            <input id="taskId" value="0" type="hidden" />
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><span asp-localized-key="@FlowsConstants.FlowsTaskModalTitle"></span></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="card border-info">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label text-right">
                                            <span asp-localized-key="@LocalizationsConstants.Name"></span><span class="required">*</span>
                                        </label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" id="taskName"
                                                   placeholder="@Html.GetLocalizedText(LocalizationsConstants.Name)" />
                                            <span asp-validation-for="Name" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label text-right">
                                            <span asp-localized-key="@LocalizationsConstants.Description"></span>
                                        </label>
                                        <div class="col-sm-8">
                                            <textarea type="text" class="form-control" id="taskDescription"
                                                      placeholder="@Html.GetLocalizedText(LocalizationsConstants.Description)"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <h4>
                                <span asp-localized-key="@LocalizationsConstants.Permissions"></span>
                            </h4>
                            <partial name="_MultiSelectControl" for="@Model.ModalMultiselect" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <h4 class="card-title" asp-localized-key="@LocalizationsConstants.Name"></h4>
                                <div id="containerText">
                                    <div id="nameTranslationsContainer"></div>
                                    <span asp-validation-for="TextTranslations" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <h4 class="card-title" asp-localized-key="@LocalizationsConstants.Description"></h4>
                                <div id="containerDescription">
                                    <div id="descriptionTranslationsContainer"></div>
                                    <span asp-validation-for="DescriptionTranslations" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hiddenTableHeaderLanguages" value="@Html.GetLocalizedText(LocalizationsConstants.Languages)" />
                        <input type="hidden" id="hiddenTableHeaderDescription" value="@Html.GetLocalizedText(LocalizationsConstants.Description)" />
                        <input type="hidden" id="hiddenPermissionsName" value="@Model?.ModalMultiselect?.Name" />

                        <div class="row">
                            <div class="col-12 text-right">
                                <hr />
                                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">@Html.GetLocalizedText(LocalizationsConstants.Close)</button>
                                <button type="button" class="btn btn-primary" onclick="app.taskmodal.UpdateTask()" data-dismiss="modal">@Html.GetLocalizedText(LocalizationsConstants.Confirm)</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>