@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.Common.Constants.Flows
@using Group.Salto.Common.Constants
@using Group.Salto.SOM.Web.Models.MultiSelect;

<div class="modal fade" id="modalTrigger" style="display:none;" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-primary" role="document">
        <form asp-controller="Triggers" asp-action="PostTrigger" method="post" class="form-horizontal">
            <input id="taskId" value="0" type="hidden" />
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><span asp-localized-key="@FlowsConstants.FlowsTriggersModalTitle"></span></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <select id="triggers-combo-types" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <select id="triggers-combo-values" class="form-control"></select>
                    </div>           
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">@Html.GetLocalizedText(LocalizationsConstants.Close)</button>
                        <button type="button" id="trigger-submit" class="btn btn-primary" onclick="app.triggerModal.PostModalTriggerData()" data-dismiss="modal">@Html.GetLocalizedText(LocalizationsConstants.Confirm)</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>