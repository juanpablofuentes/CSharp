@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Flows
@using Group.Salto.SOM.Web.Extensions
@model Group.Salto.SOM.Web.Models.Flows.FlowsDetailViewModel

<div class="row">
    <div class="col-12 col-sm-4">
        <div class="card border-info">
            <div class="card-body">
                <div class="form-group">
                    <label>
                        <span asp-localized-key="@LocalizationsConstants.Name"></span><span class="required">*</span>
                    </label>
                    <input type="text" class="form-control" asp-for="Name"
                           placeholder="@Html.GetLocalizedText(LocalizationsConstants.Name)" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        <span asp-localized-key="@LocalizationsConstants.Description"></span>
                    </label>
                    <div>
                        <textarea class="form-control" asp-for="Description"
                                  placeholder="@Html.GetLocalizedText(LocalizationsConstants.Description)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col p-0">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="Published" type="checkbox" class="custom-control-input" id="Published" />
                            <label class="custom-control-label" for="Published"><span asp-localized-key="@LocalizationsConstants.Published"></span></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Flows")'"></button>
        <input type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>