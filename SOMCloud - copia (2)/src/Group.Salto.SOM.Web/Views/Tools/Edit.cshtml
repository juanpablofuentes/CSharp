@using Group.Salto.SOM.Web.Models.Tools;
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Extensions;
@using Group.Salto.Common.Constants;
@using Group.Salto.Common.Constants.Tools;
@using Group.Salto.Common.Enums;

@model ResultViewModel<ToolsDetailsViewModel>

@{
    ViewData["Title"] = @Html.GetLocalizedText(ToolsConstants.ToolsDetailsTitle);
    Layout = "~/Views/Shared/_Layout.cshtml";
    var claimUserConfigurationId = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(AppIdentityClaims.UserId);
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-6">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2> <span asp-localized-key="ToolsDetailsTitle"></span>&nbsp;<small class="text-muted">#@Model.Data.Id</small></h2>
            </div>
            <div class="card-body">
                <form asp-controller="Tools" asp-action="Edit" method="post" class="form-horizontal">
                    <partial name="_ToolsForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/MultiComboListSelector.js"></script>
    <script src="~/js/AutocompleteControl.js"></script>
    <script src="~/js/Common/constants.js"></script>
    <script src="~/js/Common/validations.js"></script>
    <script src="~/js/AutoCompleteListSelector.js"></script>
    <script src="~/js/Common/config.js"></script>
    <script src="~/js/Tools/ToolsDetail.js"></script>
    <script src="~/js/Common/authorization.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
               var selectedToolsType =
                    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model?.Data?.Types));

                function getToolsTypeFilter(text) {
                    var data = {
                        QueryType: app.constants.QueryToolsType,
                        QueryTypeParameters: {
                            Value : text
                        }
                    }
                    return data;
                }
                var options = {
                    toolstypeCombo: {
                        selectedItems: selectedToolsType,
                        column1Text: '#',
                        column2Text: '@Html.GetLocalizedText(LocalizationsConstants.FullName)',
                        getDataMethod: getToolsTypeFilter
                    },

                };
                app.tools.detail.Init(options);
                var saveEdit = @Html.CanDoAction(claimUserConfigurationId, ActionGroupEnum.Tools, ActionEnum.Update).ToString().ToLower();
                app.common.authorization.disable("btnSaveTools", saveEdit);
            });
        })(jQuery);
    </script>
}