@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Permissions
@using Group.Salto.SOM.Web.Models.Permissions;
@using Group.Salto.Controls.Table
@using Group.Salto.ServiceLibrary.Helpers
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result

@model ResultViewModel<PermissionsListViewModel>

@{
    var title = Html.GetLocalizedText(PermissionsConstants.PermissionsIndexPageTitle);
    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">@title</h1>

@{
    var table = Html.GetMultiSelectTableFor(Model.Data.Permissions, au => au.Id.Value, Model.Data.PermissionsFilter, TranslationHelper.GetTranslationService());
    table.SetColumns(m => m.Name, m => m.Description);
    table.SetSortingColumns(m => m.Name, m => m.Name, m => m.Description);
    table.ShowSelectColumn = false;
    table.TableCssClass = "table table-striped table-hover";
    table.TableHeaderCssClass = "thead-som";

    table.AddColumnTemplateFor(m => m.Id,
    @<div class="col-update text-right">
        <a asp-action="Edit" asp-route-id="@item.RawValue" id="@item.RawValue">
            <i class="fa fa-pencil fa-lg"></i>
        </a>
        <a asp-action="Delete" asp-route-id="@item.RawValue" id="@item.RawValue" class="deleteButton"
           data-toggle="tooltip" data-placement="top">
            <i class="fa fa-trash-o fa-lg"></i>
        </a>
    </div>, "");
}

<div class="content">
    <div class="row">
        <div class="col-12">
            <partial name="_PermissionsFilter" model="@Model.Data.PermissionsFilter" />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (Model.Data.Permissions.Any())
            {
                <div class="table-responsive workstation-table">
                    @table.Render("PermissionsGrid")
                </div>

                <partial name="_Pager" for="@Model.Data.PermissionsFilter" />
            }
            else
            {
                <partial name="_NoRecords" />
            }
        </div>
    </div>
</div>

<popup Text="@Html.GetLocalizedText(PermissionsConstants.PermissionsDeleteMessage)"
       Id="confirmationModal" is-important-message="true"
       title="@Html.GetLocalizedText(LocalizationsConstants.ImportantModalTitle)"
       submit-button-text="@Html.GetLocalizedText(LocalizationsConstants.Confirm)"
       cancel-button-text="@Html.GetLocalizedText(LocalizationsConstants.Close)"></popup>

@section scripts {
    <script src="~/js/Permissions/permissions.js"></script>
    <script src="~/js/Common/config.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
                app.permissions.Init();

                MultiTableScript("PermissionsGrid");
                var page = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.PermissionsFilter));

                pager.PagerSelector.Init({ PageData: page });

                $(".deleteButton").on("click", function (evt) {
                    evt.preventDefault();
                    var id = $(this).attr('id');
                    $("#confirmationModal").modal("toggle");
                    $("#confirmationModalConfirmSave").on("click", function () {
                        $("#confirmationModal").modal("toggle");
                        $("#confirmationModalConfirmSave").off("click");
                        deleteElement(id, "#confirmationModal", "#confirmationModalConfirmSave");
                    });


                });

                function deleteElement(id, modalId, saveButtonId) {
                    $(modalId).modal();
                    showSpinner();
                    var deleteItem = apiCall('@Url.Action("Delete", "Permissions")', 'DELETE', 'json', { id: id });

                    deleteItem.done(function () {
                            hideSpinner();
                            $("#btnApplyFilter").click();
                        });
                    $(modalId).modal();
                }

                $("#confirmationModalConfirmCancel").on("click", function () {
                    $("#confirmationModal").removeClass("in show");
                    $("#confirmationModal").css("display", "none");
                    $("#confirmationModalConfirmSave").off("click");
                });
            });
        })(jQuery);
    </script>
}