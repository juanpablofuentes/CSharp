@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Permissions
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Permissions
@model PermissionDetailViewModel

<div class="row">
    <div class="col-12 col-sm-4">
        <div class="card border-info">
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@LocalizationsConstants.Name"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Name"
                               placeholder="@Html.GetLocalizedText(LocalizationsConstants.Name)" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@LocalizationsConstants.Description"></span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Description"
                               placeholder="@Html.GetLocalizedText(LocalizationsConstants.Description)" />
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@LocalizationsConstants.Observations"></span>
                    </label>
                    <div class="col-sm-8">
                        <textarea asp-for="Observations" rows="9" class="form-control"></textarea>
                        <span asp-validation-for="Observations" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsTaskAreaTitle"></span>
        </h4>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsLocationResponsible" />
                    <label class="custom-control-label" asp-for="IsLocationResponsible">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsLocationResponsibleTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsDriver" />
                    <label class="custom-control-label" asp-for="IsDriver">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsDriverTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsContact" />
                    <label class="custom-control-label" asp-for="IsContact">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsContactTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsComercialTasks" />
                    <label class="custom-control-label" asp-for="IsComercialTasks">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsComercialTasksTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsManagerTasks" />
                    <label class="custom-control-label" asp-for="IsManagerTasks">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsManagerTasksTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsTechnicalTasks" />
                    <label class="custom-control-label" asp-for="IsTechnicalTasks">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsTechnicalTasksTitle"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsOperatorTasks" />
                    <label class="custom-control-label" asp-for="IsOperatorTasks">
                        <span asp-localized-key="@PermissionsConstants.PermissionsIsOperatorTasksTitle"></span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    @*TODO Set Graphic*@
</div>
<br />
<div class="row">
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsWorkOrderCategoriesMultiSelectorTitle"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.WorkOrderCategories" />
    </div>
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsQueuesMultiSelectorTitle"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.Queues" />
    </div>
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsPredefinedServicesMultiSelectorTitle"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.PredefinedServices" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsPeopleMultiSelectorTitle"></span>
        </h4>

        <partial name="_MultiSelectControl" for="@Model.People" />
    </div>
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsProjectsMultiSelectorTitle"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.Projects" />
    </div>
    <div class="col-12 col-sm-4">
        <h4>
            <span asp-localized-key="@PermissionsConstants.PermissionsTasksMultiSelectorTitle"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.Tasks" />
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Permissions")'"></button>
        <input id="btnSavePermission" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>
<br />