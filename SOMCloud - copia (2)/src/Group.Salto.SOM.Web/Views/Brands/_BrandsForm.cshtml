@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Brands
@using Group.Salto.Common.Constants.Model
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Brands

@model BrandsDetailsViewModel

@if (Model != null && Model.Id != 0)
{
    <div class="form-group row">
        <label asp-localized-key="@BrandsConstants.BrandsIdentifierText" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-8">
            <input type="text" asp-for="Id" readonly />
        </div>
    </div>
}
<div class="form-group row">
    <label class="col-12 col-sm-3 col-form-label" asp-for="Name"><span asp-localized-key="@BrandsConstants.BrandsGridTheadName"></span><span class="required">*</span></label>
    <div class="col-12 col-sm-4">
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-12 col-sm-3 col-form-label" asp-localized-key="@BrandsConstants.BrandsGridTheadDescription" asp-for="Description"></label>
    <div class="col-12 col-sm-4">
        <input asp-for="Description" rows="9" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-12 col-sm-3 col-form-label" asp-localized-key="@BrandsConstants.BrandsGridTheadUrl" asp-for="Url"></label>
    <div class="col-md-8">
        <div class="input-group">
            <input type="url" id="navUrlDocInput" class="form-control" asp-for="Url" placeholder="@Html.GetLocalizedText(ModelConstants.ModelModalUrlPlaceholder)">
            <div class="input-group-append">
                <a id="navUrlDocBtn" class="btn btn-info text-white"><i class="fa fa-arrow-right fa-lg"></i></a>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h4 class="card-title" asp-localized-key="@BrandsConstants.BrandsModelsTitle"></h4>
        <div id="container">
            <div id="ModelContainer"></div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-12 text-right">
        <hr />
        <button type="reset" class="btn btn-outline-danger" onclick="location.href ='@Url.Action("Index", "Brands")'">
            <span asp-localized-key="ActionsDetailsBtnCancel"></span>
        </button>
        <input id="btnSaveBrands" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>