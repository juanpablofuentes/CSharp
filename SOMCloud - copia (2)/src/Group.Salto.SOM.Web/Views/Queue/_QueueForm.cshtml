@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Queue
@using Group.Salto.SOM.Web.Extensions
@model Group.Salto.SOM.Web.Models.Queue.QueueViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="card border-info">
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@LocalizationsConstants.Name"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Name"
                               placeholder="@Html.GetLocalizedText(LocalizationsConstants.Name)" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@LocalizationsConstants.Description"></span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Description"
                               placeholder="@Html.GetLocalizedText(LocalizationsConstants.Description)" />
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <h4>
            <span asp-localized-key="@LocalizationsConstants.Permissions"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.Permissions" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-12 col-sm-6">
        <div class="form-group">
            <h4 class="card-title" asp-localized-key="@LocalizationsConstants.Name"></h4>
            <div id="containerText">
                <div id="nameTranslationsContainer"></div>
                <span asp-validation-for="TextTranslations" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="form-group">
            <h4 class="card-title" asp-localized-key="@LocalizationsConstants.Description"></h4>
            <div id="containerDescription">
                <div id="descriptionTranslationsContainer"></div>
                <span asp-validation-for="DescriptionTranslations" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 text-right">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Queue")'"></button>
        <input id="btnSaveQueue" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>
