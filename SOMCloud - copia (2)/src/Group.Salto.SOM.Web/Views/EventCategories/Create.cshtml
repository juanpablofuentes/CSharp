
@using Group.Salto.SOM.Web.Models.EventCategoriesViewModel
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Extensions;
@using Group.Salto.Common.Constants;
@using Group.Salto.Common.Constants.EventCategories;

@model ResultViewModel<EventCategoriesDetailViewModel>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-6">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2 asp-localized-key="@EventCategoriesConstants.EventCategoriesCreatPageTitle"></h2>
            </div>
            <div class="card-body">
                <form asp-controller="EventCategories" asp-action="Create" method="post" class="form-horizontal">
                    <partial name="_EventCategoriesForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>