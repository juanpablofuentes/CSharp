@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.WorkCenter
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.WorkCenter
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.Controls.Table
@using Group.Salto.ServiceLibrary.Helpers
@model ResultViewModel<WorkCentersListViewModel>

@{
    var title = @Html.GetLocalizedText(WorkCenterConstants.WorkCenterPageTitle);
    ViewData["Title"] = title;

    var tableId = Guid.NewGuid();
}
<h1 class="page-title">@title</h1>
@{
    var table = Html.GetMultiSelectTableFor(Model.Data.WorkCenters, au => au.Id.Value, Model.Data.WorkCenterFilters, TranslationHelper.GetTranslationService());
    table.SetColumns(m => m.Name, m => m.Company, m => m.Responsable, m => m.Municipality);
    table.SetSortingColumns(m => m.Name, m => m.Company, m => m.Responsable);
    table.ShowSelectColumn = false;
    table.TableCssClass = "table table-striped table-hover";
    table.TableHeaderCssClass = "thead-som";

    table.AddColumnTemplateFor(m => m.Id,
    @<div class="col-update text-right">
        <a asp-action="Edit" asp-route-id="@item.RawValue" id="@item.RawValue">
            <i class="fa fa-pencil fa-lg"></i>
        </a>
        <a asp-action="Delete" asp-route-id="@item.RawValue" id="@item.RawValue" class="deleteButton"
           data-toggle="tooltip" data-placement="top">
            <i class="fa fa-trash-o fa-lg"></i>
        </a>
    </div>, "");
}

<div class="content">
    <div class="row">
        <div class="col-12">
            <partial name="_WorkCenterFilter" model="@Model.Data.WorkCenterFilters" />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (Model.Data.WorkCenters.Any())
            {
                <div class="table-responsive workstation-table">
                    @table.Render("WorkCenterGrid")
                </div>

                <partial name="_Pager" model="@Model.Data.WorkCenterFilters" />
            }
            else
            {
                <partial name="_NoRecords" />
            }
        </div>
    </div>
</div>

<popup Text="@Html.GetLocalizedText(WorkCenterConstants.WorkCenterDeleteMessage)" Id="confirmationModal"
       submit-button-text="@Html.GetLocalizedText(LocalizationsConstants.Confirm)"
       cancel-button-text="@Html.GetLocalizedText(LocalizationsConstants.Close)"></popup>
<popup Text="@Html.GetLocalizedText(WorkCenterConstants.WorkCenterDeleteWithPeopleMessage)" Id="confirmationModalWithPeople"
       show-cancel-button="false"
       submit-button-text="@Html.GetLocalizedText(LocalizationsConstants.Confirm)"></popup>

@section scripts {
    <script src="~/js/WorkCenter/WorkCenter.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
                app.workcenter.Init();
                MultiTableScript("WorkCenterGrid");
                var page = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.WorkCenterFilters));
                var values = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data.WorkCenters.Items.Select(x=>new {id = x.Id, hasPeopleAssigned = x.HasPeopleAssigned })));
                pager.PagerSelector.Init({ PageData: page });

                $(".deleteButton").on("click",
                    function (evt) {
                        evt.preventDefault();
                        var id = $(this).attr('id');
                        var item = values.find(o => o.id == id);
                        if (item !== null) {
                            if (item.hasPeopleAssigned) {
                                $("#confirmationModalWithPeople").modal("toggle");
                                $("#confirmationModalWithPeopleConfirmSave").on("click", function () {
                                    $("#confirmationModalWithPeople").modal("toggle");
                                    $("#confirmationModalWithPeopleConfirmSave").off("click");
                                });
                            } else {
                                deleteElement(item.id, "#confirmationModal", "#confirmationModalConfirmSave");
                            }
                        }
                    });
                function deleteElement(id, modalId, saveButtonId)
                {
                    $(modalId).modal("toggle");
                    $(saveButtonId).on("click",
                        function () {
                            $.ajax({
                                url: '@Url.Action("Delete", "WorkCenter")',
                                type: 'POST',
                                dataType: 'json',
                                cache: false,
                                data: { id: id },
                                success: function () {
                                    $("#btnApplyFilter").trigger("click");
                                },
                            });
                            $(modalId).modal("toggle");
                        });
                }
                $("#confirmationModalConfirmCancel").on("click", function ()
                {
                    $("#confirmationModal").modal("toggle");
                    $("#confirmationModalConfirmSave").off("click");
                });
            });
        })(jQuery);
    </script>
}