@using Group.Salto.SOM.Web.Models.PaymentMethod;
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Extensions;
@using Group.Salto.Common.Constants;
@using Group.Salto.Common.Constants.PaymentMethod;
@using Group.Salto.Common.Enums;

@model ResultViewModel<PaymentMethodViewModel>

@{
    ViewData["Title"] = @Html.GetLocalizedText(PaymentMethodConstants.PaymentMethodDetailsTitle);
    Layout = "~/Views/Shared/_Layout.cshtml";
    var claimUserConfigurationId = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(AppIdentityClaims.UserId);
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-6">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2><span asp-localized-key="PaymentMethodDetailsTitle"></span>&nbsp;<small class="text-muted">#@Model.Data.Id</small></h2>
            </div>
            <div class="card-body">
                <form asp-controller="PaymentMethod" asp-action="Edit" method="post" class="form-horizontal">
                    <partial name="_PaymentMethodForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/Common/authorization.js"></script>

    <script>
        (function($) {
            $(document).ready(function() {
                var saveEdit = @Html.CanDoAction(claimUserConfigurationId, ActionGroupEnum.PaymentMethods, ActionEnum.Update).ToString().ToLower();
                app.common.authorization.disable("btnSavePaymentMethod", saveEdit);
            });
        })(jQuery);
    </script>
}