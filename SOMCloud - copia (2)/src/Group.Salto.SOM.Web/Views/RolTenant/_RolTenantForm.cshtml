@using Group.Salto.SOM.Web.Models.RolTenant
@using Group.Salto.Common.Constants.RolTenant
@using Group.Salto.SOM.Web.Extensions

@model RolTenantViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        @if (Model.Id != 0)
        {
            <div class="form-group row">
                <label class="col-sm-4">
                    <span asp-localized-key="@RolTenantConstants.RolTenantIdForm"></span>
                </label>
                <div class="col-sm-8">
                    <input asp-for="Id"
                           class="form-control" readonly="readonly"
                           placeholder="@Html.GetLocalizedText(RolTenantConstants.RolTenantIdFormPlaceholder)" />
                </div>
            </div>
        }
        <div class="form-group row">
            <label class="col-sm-4">
                <span asp-localized-key="@RolTenantConstants.RolTenantNameForm"></span><span class="required">*</span>
            </label>
            <div class="col-sm-8">
                <input asp-for="Name"
                       class="form-control"
                       placeholder="@Html.GetLocalizedText(RolTenantConstants.RolTenantNameFormPlaceholder)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4">
                <span asp-localized-key="@RolTenantConstants.RolTenantDescriptionForm"></span><span class="required">*</span>
            </label>
            <div class="col-sm-8">
                <input asp-for="Description"
                       class="form-control"
                       placeholder="@Html.GetLocalizedText(RolTenantConstants.RolTenantDescriptionFormPlaceholder)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

    </div>
</div>