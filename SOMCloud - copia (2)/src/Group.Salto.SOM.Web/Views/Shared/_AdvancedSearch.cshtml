@using Group.Salto.Common.Constants
@using Group.Salto.SOM.Web.Extensions
<div class="modal fade" id="AdvancedSearchModal" tabindex="-1" style="display:none;" role="dialog" aria-labelledby="AdvancedSearchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="headerTitle" name="headerTitle"></span></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-4" id="divSelectType" name="divSelectType">
                        <div class="form-group">
                            <select id="SelectType" name="SelectType" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="form-group">
                            <input type="text" id="searchinput" name="searchinput" class="form-control" autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7">
                        <div class="form-group">
                            <select multiple="multiple" id="SelectDataMultiple" name="SelectDataMultiple" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-5 columns">
                        <dl class="row" id="infoData" name="infoData"></dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="AdvancedSearchModalCancel" class="btn btn-outline-danger" type="button" data-dismiss="modal">@Html.GetLocalizedText(LocalizationsConstants.CancelText)</button>
                <button id="AdvancedSearchModalAdd" class="btn btn-success" type="button"><i class="fa fa-plus mr-2"></i>@Html.GetLocalizedText(LocalizationsConstants.Add)</button>
                <button id="AdvancedSearchModalChoose" class="btn btn-primary" type="button">@Html.GetLocalizedText(LocalizationsConstants.Choose)</button>
            </div>
        </div>
    </div>
</div>