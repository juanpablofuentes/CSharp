<!DOCTYPE html>
<!--[if IE 9]><html lang="en" dir="ltr" itemscope="" itemtype="http://schema.org/Event" class="ie9"><![endif]-->
<!--[if gt IE 9]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Group.Salto.SOM.Web</title>

    <link rel="icon" type="image/png" href="~/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="~/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="~/favicon-96x96.png" sizes="96x96">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/style.min.css" rel="stylesheet" />

    <environment include="Development">
        <link rel="stylesheet" href="~/css/bundle.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/bundle.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("Styles", required: false)

    <script src="~/lib/modernizr/modernizr.min.js"></script>
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <![endif]-->
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <partial name="_Spinner" />

    <header class="app-header navbar">
        <partial name="_MainMenu" />
    </header>

    <div class="app-body">
        <div class="sidebar">
            <partial name="_Sidebar" />
        </div>

        <main class="main">
            <ol class="breadcrumb">
                <partial name="_Breadcrumb" />
                @RenderSection("Breadcrumb", required: false)
            </ol>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>

        <aside id="sideBarMenu" class="aside-menu">
            @RenderSection("sideBarMenu", false)
        </aside>
    </div>

    <footer class="app-footer">
        <p>&copy; @DateTime.Now.Year - Group Salto</p>
    </footer>

    <environment include="Development">
        <script src="~/js/Bundle/Commons.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-migrate/jquery-migrate.js"></script>
        <script src="~/lib/toastr.js/toastr.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/pace-progress/pace.min.js"></script>
        <script src="~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
        <script src="~/lib/@@coreui/coreui/dist/js/coreui.min.js"></script>
        <script src="~/lib/dhtmlx/suite/codebase/dhtmlx.js"></script>
        <script src="~/js/Multitable.js"></script>
        <script src="~/js/pagerScripts.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundle/Commons.js"></script>
        <script src="~/js/Bundle/bundle.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
    @RenderSection("Modals", required: false)

    <partial name="_Toastr" />
</body>
</html>