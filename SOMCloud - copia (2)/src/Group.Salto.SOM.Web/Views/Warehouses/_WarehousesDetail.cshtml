@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Warehouses
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.SOM.Web.Models.Warehouses;
@model WarehousesBaseViewModel

<div class="row">
    <div class="col-sm-12">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-general-tab" data-toggle="tab" href="#nav-general" role="tab" aria-controls="nav-general">@Html.GetLocalizedText(WarehousesConstants.WarehousesGeneralTab)</a>
            </li>
            @if (Model.GeneralViewModel?.Id > 0)
            {
                <li class="nav-item">
                    <a class="nav-link" id="nav-stock-tab" data-toggle="tab" href="#nav-stock" role="tab" aria-controls="nav-stock">@Html.GetLocalizedText(WarehousesConstants.WarehousesStockTab)</a>
                </li>
            }
        </ul>
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-general" role="tabpanel" aria-labelledby="nav-general-tab">
                <partial name="_GeneralForm" for="GeneralViewModel" />
            </div>
            @if (Model.GeneralViewModel?.Id > 0)
            {
                <div class="tab-pane fade" id="nav-stock" role="tabpanel" aria-labelledby="nav-stock-tab">
                    <partial name="_StockForm" for="StockViewModel" />
                </div>
            }
        </div>
    </div>
</div>
<br />