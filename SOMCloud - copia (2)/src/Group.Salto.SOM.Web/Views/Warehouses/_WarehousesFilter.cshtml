@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Warehouses
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Warehouses

@model WarehousesFilterViewModel

<div>
    <partial model="@Model.FilterHeader" name="_FilterHeader" />
    <div class="collapse in" id="filterWarehouses">
        <form asp-action="Filter" asp-controller="Warehouses" method="post" id="filter-form" class="form-control">
            <partial model="Model" name="_PagerHiddens" />
            <partial model="Model" name="_MultiTableHiddens" />
            <div class="row">
                <div class="col-lg-6">
                    <label class="col-form-label">
                        <span asp-localized-key="@WarehousesConstants.WarehousesFilterName"></span>
                    </label>
                    <input id="FilterName" asp-for="Name" class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(WarehousesConstants.WarehousesFilterPlaceholderName)" />
                </div>
                <div class="col-lg-6">
                    <label class="col-form-label">
                        <span asp-localized-key="@WarehousesConstants.WarehousesFilterErpReference"></span>
                    </label>
                    <input asp-for="ERPReference" class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(WarehousesConstants.WarehousesFilterPlaceholderErpReference)" />
                </div>               
                <div class="col-lg-12">
                    <div class="pull-right">
                        <br>
                        <button type="button" id="btnClear" class="btn btn-outline-danger" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                        <button id="btnApplyFilter" class="btn btn-primary" name="btnApplyFilter" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>