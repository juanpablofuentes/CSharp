@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Warehouses
@using Group.Salto.SOM.Web.Models.Warehouses
@using Group.Salto.SOM.Web.Extensions
@model WarehouseGeneralViewModel

<div class="row">
    <input asp-for="@Model.Id" type="hidden" />
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card border-primary">
            <div class="card-body">
                <div class="form-group">
                    <label>
                        <span asp-localized-key="@WarehousesConstants.WarehousesDetailsName"></span><span class="required">*</span>
                    </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        <span asp-localized-key="@WarehousesConstants.WarehousesDetailsCode"></span>
                    </label>
                    <input asp-for="Code" class="form-control" />
                </div>               
                <div class="form-group">
                    <label>
                        <span asp-localized-key="@WarehousesConstants.WarehousesDetailsERPReference"></span>
                    </label>
                    <input asp-for="ERPReference" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>