@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Project
@using Group.Salto.SOM.Web.Models.Projects
@using Group.Salto.SOM.Web.Extensions
@model GenericDetailViewModel

<div class="row">
    <div class="col-12 col-sm-4">
        <div class="card border-primary">
            <div class="card-body">
                <div class="form-group">
                    <input asp-for="Id" type="hidden" />
                    <label><span asp-localized-key="@ProjectConstants.ProjectGenericContractText"></span>&nbsp;<span class="required">*</span></label>
                    <select asp-for="ContractId" asp-items="@Model.ContractListItems" class="form-control"><option value="0">-</option></select>
                    <span asp-validation-for="ContractId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label><span asp-localized-key="@ProjectConstants.ProjectGenericFirstNameText"></span>&nbsp;<span class="required">*</span></label>
                    <input asp-for="FirstName" class="form-control" placeholder="@Html.GetLocalizedText(ProjectConstants.ProjectGenericFirstNameText)" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label><span asp-localized-key="@ProjectConstants.ProjectGenericSeriesText"></span>&nbsp;<span class="required">*</span></label>
                    <input asp-for="Serie" class="form-control" placeholder="@Html.GetLocalizedText(ProjectConstants.ProjectGenericSeriesText)" />
                    <span asp-validation-for="Serie" class="text-danger"></span>
                </div>

                <div class="form-group row mb-0">
                    <label><span asp-localized-key="@ProjectConstants.ProjectGenericStatusText"></span></label>
                    <div class="col">
                        <label class="switch switch-som switch-label switch-pill switch-primary">
                            <input asp-for="IsActive" type="checkbox" class="switch-input">
                            <span class="switch-slider" data-checked="@Html.GetLocalizedText(LocalizationsConstants.IsActive)" data-unchecked="@Html.GetLocalizedText(LocalizationsConstants.Disabled)"></span>
                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6 pl-0">
                        <label><span asp-localized-key="@ProjectConstants.ProjectGenericStartDateText"></span>&nbsp;<span class="required">*</span></label>
                        <input asp-for="StartDate" type="text" class="form-control">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-6 pr-0">
                        <label><span asp-localized-key="@ProjectConstants.ProjectGenericEndDateText"></span>&nbsp;<span class="required">*</span></label>
                        <input asp-for="EndDate" type="text" class="form-control">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@ProjectConstants.ProjectGenericAccountantText"></span></label>
            <input asp-for="Counter" id="CounterId" class="form-control" placeholder="@Html.GetLocalizedText(ProjectConstants.ProjectGenericAccountantText)" />
            <span asp-validation-for="Counter" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@ProjectConstants.ProjectGenericDaysVisiblePDAText"></span></label>
            <input asp-for="VisibilityPda" class="form-control" placeholder="@Html.GetLocalizedText(ProjectConstants.ProjectGenericDaysVisiblePDAText)" />
            <span asp-validation-for="VisibilityPda" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-sm-4">

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericProjectManagerText"></span>&nbsp;<span class="required">*</span></label>
            <select asp-for="ProjectManagerId" asp-items="@Model.ProjectManagerListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericQueueText"></span>&nbsp;</label>
            <select asp-for="QueueId" asp-items="@Model.QueueListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="QueueId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericOTStuatusDefaultText"></span>&nbsp;<span class="required">*</span></label>
            <select asp-for="WOStatusestId" asp-items="@Model.WOStatusestListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="WOStatusestId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericExtraFieldsCollectionText"></span></label>
            <select asp-for="ExtraFieldsCollectionId" asp-items="@Model.ExtraFieldsCollectionListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="ExtraFieldsCollectionId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericClosingCodesCollectionText"></span>&nbsp;<span class="required">*</span></label>
            <select asp-for="ClosingCodesCollectionId" asp-items="@Model.ClosingCodesCollectionListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="ClosingCodesCollectionId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericOTTypeCollectionText"></span>&nbsp;<span class="required">*</span></label>
            <select asp-for="WOTypeCollectionId" asp-items="@Model.WOTypeCollectionListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="WOTypeCollectionId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label data-toggle="tooltip" data-placement="top"><span asp-localized-key="@ProjectConstants.ProjectGenericOTCategoriesCollectionText"></span>&nbsp;<span class="required">*</span></label>
            <select asp-for="WOCategoriesCollectionId" asp-items="@Model.WOCategoriesCollectionListItems" class="form-control"><option value="0">-</option></select>
            <span asp-validation-for="WOCategoriesCollectionId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@ProjectConstants.ProjectGenericObservationsText"></span></label>
            <input asp-for="Observations" class="form-control" placeholder="@Html.GetLocalizedText(ProjectConstants.ProjectGenericObservationsText)" />
            <span asp-validation-for="Observations" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-sm-4">
        <div class="form-group">
            <label><span asp-localized-key="@LocalizationsConstants.Permissions"></span>&nbsp;<span class="required">*</span></label>
            <partial name="_MultiSelectControl" for="@Model.Permissions" />
            <span asp-validation-for="Permissions" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-12">
                <h4 class="card-title" asp-localized-key="@ProjectConstants.ProjectContactsEditTitle"></h4>
                <div id="container">
                    <div id="ContactContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>