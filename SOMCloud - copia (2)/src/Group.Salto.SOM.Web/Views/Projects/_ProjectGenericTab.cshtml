@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Project
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.SOM.Web.Models.Projects;
@model ProjectsDetailViewModel

@{
    string title = @Html.GetLocalizedText(ProjectConstants.ProjectPageTitle);
    ViewData["Title"] = title;
}

<div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item project-tab">
                <a class="nav-link active" id="nav-generic-tab" data-toggle="tab" href="#nav-generic" role="tab" aria-controls="nav-generic" aria-selected="true">@Html.GetLocalizedText(ProjectConstants.ProjectGenericTab)</a>
            </li>
            <li class="nav-item project-tab">
                <a class="nav-link" id="nav-predefinedforms-tab" data-toggle="tab" href="#nav-predefinedforms" role="tab" aria-controls="nav-predefinedforms" aria-selected="true">@Html.GetLocalizedText(ProjectConstants.ProjectPredefinedFormsTab)</a>
            </li>
            <li class="nav-item project-tab">
                <a class="nav-link project-tab" id="nav-contacts-tab" data-toggle="tab" href="#nav-contacts" role="tab" aria-controls="nav-contacts" aria-selected="false">@Html.GetLocalizedText(ProjectConstants.ProjectcontactsTab)</a>
            </li>
            <li class="nav-item project-tab">
                <a class="nav-link" id="nav-Technicians-tab" data-toggle="tab" href="#nav-Technicians" role="tab" aria-controls="nav-Technicians" aria-selected="false">@Html.GetLocalizedText(ProjectConstants.ProjectTechniciansTab)</a>
            </li>
            @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
            {
                <li class="nav-item project-tab" id="nav-calendar-li">
                    <a onclick="setTimeout(function(){ loadScheduler(); }, 500);" class="nav-link" id="nav-calendar-tab" data-toggle="tab" href="#nav-calendar" role="tab" aria-controls="nav-calendar" aria-selected="false">@Html.GetLocalizedText(ProjectConstants.ProjectCalendarTab)</a>                    
                </li>
            }
        </ul>
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-generic" role="tabpanel" aria-labelledby="nav-generic-tab">
                <partial name="_GenericForm" for="GenericDetailViewModel" />
            </div>
            <div class="tab-pane fade" id="nav-predefinedforms" role="tabpanel" aria-labelledby="nav-collections-tab">
                <partial name="_PredefinedForms"/>
            </div>
            <div class="tab-pane fade" id="nav-contacts" role="tabpanel" aria-labelledby="nav-contacts-tab">
                <partial name="_ContractsForm" for="GenericDetailViewModel"/>
            </div>
            <div class="tab-pane fade" id="nav-Technicians" role="tabpanel" aria-labelledby="nav-Technicians-tab">
                <partial name="_TechniciansForm" for="GenericDetailViewModel"/>
            </div>
            @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
            {
                <div class="tab-pane fade" id="nav-calendar" role="tabpanel" aria-labelledby="nav-calendar-tab">
                    <div class="row">
                        <div class="col-12">
                            <button type="button" class="btn btn-success" data-toggle='modal' data-target='#AddCalendarModal'>
                                <span asp-localized-key="@ProjectConstants.ProjectTabCalendarButtonCreateCalendar"></span>
                            </button>
                        </div>
                        <partial name="_Scheduler" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />