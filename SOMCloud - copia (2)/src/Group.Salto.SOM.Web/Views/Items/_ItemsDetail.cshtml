@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Items
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.SOM.Web.Models.Items;
@model ItemsDetailViewModel

<div class="row">
    <div class="col-sm-12">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-general-tab" data-toggle="tab" href="#nav-general" role="tab" aria-controls="nav-general" >@Html.GetLocalizedText(ItemsConstants.ItemsGeneralTab)</a>
            </li>
            @if (Model.GeneralViewModel?.Id != null && Model.GeneralViewModel?.Id > 0)
            {
                <li class="nav-item">
                    <a class="nav-link" id="nav-points-tab" data-toggle="tab" href="#nav-points" role="tab" aria-controls="nav-points">@Html.GetLocalizedText(ItemsConstants.ItemsPointsTab)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="nav-sales-tab" data-toggle="tab" href="#nav-sales" role="tab" aria-controls="nav-sales" >@Html.GetLocalizedText(ItemsConstants.ItemsSalesTab)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="nav-purchases-tab" data-toggle="tab" href="#nav-purchases" role="tab" aria-controls="nav-purchases" >@Html.GetLocalizedText(ItemsConstants.ItemsPurchasesTab)</a>
                </li>
                if (Model.GeneralViewModel.TrackSerialNumber)
                {
                    <li class="nav-item">
                        <a class="nav-link" visibil id="nav-tracking-tab" data-toggle="tab" href="#nav-tracking" role="tab" aria-controls="nav-tracking">@Html.GetLocalizedText(ItemsConstants.ItemsTrackingTab)</a>
                    </li>
                }
            }
        </ul>
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-general" role="tabpanel" aria-labelledby="nav-general-tab">
                <partial name="_GeneralForm" for="GeneralViewModel" />
            </div>
            @if (Model.GeneralViewModel?.Id != null && Model.GeneralViewModel?.Id > 0)
            {
                <div class="tab-pane fade" id="nav-points" role="tabpanel" aria-labelledby="nav-points-tab">
                    <partial name="_PointsForm" for="PointsViewModel" />
                </div>
                <div class="tab-pane fade" id="nav-sales" role="tabpanel" aria-labelledby="nav-sales-tab">
                    <partial name="_SalesForm" for="SalesViewModel" />
                </div>
                <div class="tab-pane fade" id="nav-purchases" role="tabpanel" aria-labelledby="nav-purchases-tab">
                    <partial name="_PurchasesForm" for="PurchasesViewModel" />
                </div>
                <div class="tab-pane fade" id="nav-tracking" role="tabpanel" aria-labelledby="nav-tracking-tab">
                    <partial name="_SerialNumbersTrackingForm" for="TrackingViewModel" />
                </div>
            }
        </div>
    </div>
</div>
<br />