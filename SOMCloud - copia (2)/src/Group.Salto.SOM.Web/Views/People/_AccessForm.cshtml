@using Group.Salto.Common.Constants.People
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.People

@model AccessEditViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="form-group row">
            <input asp-for="Id" type="hidden" />
            <input asp-for="EditMode" type="hidden" />

            <label class="col-sm-3 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessEmailForm"></span><span class="required">*</span>
            </label>

            <div class="col-sm-7">
                <input asp-for="UserName" readonly="@(Model.IsReadOnly())"
                       class="form-control input-theme-sm"
                       placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleAccessEmailFormPlaceholder)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessRolForm"></span>
            </label>

            <div class="col-sm-7">
                <select asp-for="Rol" asp-items="@Model.Roles"
                        class="form-control"
                        placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleAccessRolFormPlaceholder)"></select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessIsActiveForm"></span>
            </label>

            <div class="col-sm-7 ">
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="AccessCheckIsValid" />
                    <label class="custom-control-label" for="AccessCheckIsValid"></label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessPasswordForm"></span><span class="required">*</span>
            </label>

            <div class="col-sm-7">
                <input asp-for="Password" type="password" 
                       class="form-control input-theme-sm"
                       placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleAccessPasswordFormPlaceholder)" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessConfirmForm"></span><span class="required">*</span>
            </label>

            <div class="col-sm-7">
                <input asp-for="Password2" type="password"
                       class="form-control input-theme-sm"
                       placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleAccessConfirmFormPlaceholder)" autocomplete="new-password" />
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="form-group row mb-0">
            <label class="col-sm-4 col-form-label">
                <span asp-localized-key="@PeopleConstants.PeopleAccessPermissionsForm"></span>
            </label>

            <div class="col-sm-7">
                <partial name="_MultiSelectControl" for="@Model.Permissions" />
            </div>
        </div>
    </div>
</div>