@using Group.Salto.Common.Constants.People
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.People
@using Group.Salto.Common.Constants

@model GeoLocalitzationEditViewModel

<div class="row">

    <div class="col-12 col-sm-4">

        <div class="form-group">
            <label><span asp-localized-key="@PeopleConstants.PeopleGeoPositionBaseFormText"></span></label><span class="required">*</span>
            <input asp-for="Latitude" class="form-control" placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleGeoLatitudeFormText)" readonly />
            <span asp-validation-for="Latitude" class="text-danger"></span>
            <br />

            <input asp-for="Longitude" class="form-control" placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleGeoLongitudeFormText)" readonly />
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><span asp-localized-key="@PeopleConstants.PeopleGeoRadiousFormText"></span></label><span class="required">*</span>
            <input asp-for="WorkRadiusKm" class="form-control" placeholder="@Html.GetLocalizedText(PeopleConstants.PeopleGeoRadiousFormTextPlaceHolder)" />
            <span asp-validation-for="WorkRadiusKm" class="text-danger"></span>
        </div>

    </div>

    <div class="col-12 col-sm-8">
        <div class="col-sm-3">
            <div id="panelGeocode" class="input-group mb-3">
                <input type="text" id="mapseachaddress" class="form-control">
                <div class="input-group-append">
                    <input type="button" id="searchcodeaddress" name="searchcodeaddress" value="@Html.GetLocalizedText(LocalizationsConstants.Search)" class="btn btn-info">
                </div>
            </div>
        </div>
        <div id="map-canvas"></div>
    </div>
</div>