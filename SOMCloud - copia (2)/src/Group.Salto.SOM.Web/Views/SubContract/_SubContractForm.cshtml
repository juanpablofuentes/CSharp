@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.SubContracts
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.SubContract
@model SubContractDetailViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="card border-info">
            <div class="card-body">
                @if (Model != null && Model.Id != 0)
                {
                    <div class="form-group row">
                        <label asp-localized-key="@SubContractsConstants.SubContractIdentifierText" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Id" readonly />
                        </div>
                    </div>
                }

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SubContractsConstants.SubContractNameText"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Name"
                               placeholder="@Html.GetLocalizedText(SubContractsConstants.SubContractNamePlaceholder)" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SubContractsConstants.SubContractsDescriptionText"></span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Description"
                               placeholder="@Html.GetLocalizedText(SubContractsConstants.SubContractDescriptionPlaceholder)" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SubContractsConstants.SubContractsObservationsText"></span>
                    </label>
                    <div class="col-sm-8">
                        <textarea asp-for="Observations" rows="9" class="form-control"  
                                    placeholder="@Html.GetLocalizedText(SubContractsConstants.SubContractObservationsPlaceholder)"></textArea>
                        <span asp-validation-for="Observations" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SubContractsConstants.SubContractsPurchaseRateText"></span>
                    </label>
                    <div class="col-sm-8">
                        <select asp-for="PurchaseRateId" asp-items="@Model.PurchaseRate" class="form-control input-theme-sm"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SubContractsConstants.SubContractsPriorityText"></span>
                    </label>
                    <div class="col-sm-8">
                        <select asp-for="Priority" asp-items="@Model.Priorities"
                                class="form-control input-theme-sm"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <h4 class="card-title" asp-localized-key="@SubContractsConstants.SubContractsKnowledgeTitle"></h4>
            <div id="container">
                <div id="knowledgesContainer"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        @*<h4 class="card-title" asp-localized-key="@SubContractsConstants.SubContractPeopleTitle"></h4>*@
        <div id="containerResponsibles">
            <h4 class="card-title" asp-localized-key="@SubContractsConstants.SubContractorResponsiblesTitle"></h4>
            <div id="responsiblesContainer"></div>
        </div>
        <div id="containerPeople">
            <h4 class="card-title" asp-localized-key="@SubContractsConstants.SubContractorPeopleAssignedTitle"></h4>
            <div id="peopleContainer"></div>
        </div>


    </div>

</div>

<div class="form-group row text-right">
    <div class="col-12">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "SubContract")'"></button>
        <input id="btsSaveSubcontract" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>
