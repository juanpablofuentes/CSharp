@using Group.Salto.Common.Constants
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Sites
@using Group.Salto.Common.Constants.Sites

@model SitesFilterViewModel

<div>
    <partial model="@Model.FilterHeader" name="_FilterHeader" />
    <div class="collapse in" id="filterSites">
        <form asp-action="FilterWeb" asp-controller="Sites" method="post" id="filter-form" class="form-control">
            <input asp-for="FinalClientId" type="hidden" />
            <partial model="Model" name="_PagerHiddens" />
            <partial model="Model" name="_MultiTableHiddens" />
            <div class="row">
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@SitesConstants.SitesName"></span>
                    </label>
                    <input asp-for="Name" id="sitesFilterName"
                           class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(SitesConstants.SitesName)" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="pull-right">
                        <br>
                        <button type="button" id="btnClear" class="btn btn-outline-danger" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                        <button id="btnApplyFilter" class="btn btn-primary" name="btnApplyFilter" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>