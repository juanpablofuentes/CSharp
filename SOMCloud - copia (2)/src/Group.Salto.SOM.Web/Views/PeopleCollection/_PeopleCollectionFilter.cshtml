@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.PeopleCollection
@using Group.Salto.SOM.Web.Models.PeopleCollection;
@using Group.Salto.SOM.Web.Extensions
@model PeopleCollectionFilterViewModel

<div>
    <partial model="@Model.FilterHeader" name="_FilterHeader" />
    <div class="collapse in" id="filterPeopleCollection">
        <form asp-action="Filter" asp-controller="PeopleCollection" method="post" id="filter-form" class="form-control">
            <partial model="Model" name="_PagerHiddens" />
            <partial model="Model" name="_MultiTableHiddens" />
            <div class="row">
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@PeopleCollectionConstants.PeopleCollectionFilterNameTitle"></span>
                    </label>
                    <input asp-for="Name" id="peopleCollectionFilterName"
                           class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(PeopleCollectionConstants.PeopleCollectionFilterNamePlaceholder)" />
                </div>
                <div class="col-lg-4">
                    <label class="col-sm-4 col-form-label">
                        <span asp-localized-key="@PeopleCollectionConstants.PeopleCollectionFilterDescriptionTitle"></span>
                    </label>
                    <input asp-for="Description" id="peopleCollectionFilterDescription"
                           class="form-control input-theme-sm"
                           placeholder="@Html.GetLocalizedText(PeopleCollectionConstants.PeopleCollectionFilterDescriptionPlaceHolder)" />
                </div>
                <div class="col-lg-12">
                    <div class="pull-right">
                        <br>
                        <button type="button" class="btn btn-outline-danger" id="btnClear" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                        <button name="btnApplyFilter" id="btnApplyFilter" class="btn btn-primary" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>