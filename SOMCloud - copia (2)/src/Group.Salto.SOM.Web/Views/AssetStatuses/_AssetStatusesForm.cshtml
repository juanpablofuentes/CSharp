@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.AssetStatuses
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.AssetStatuses

@model AssetStatusesViewModel

@if (Model != null && Model.Id != 0)
{
    <input type="hidden" class="form-control" asp-for="Id" readonly />
}
<div class="form-group row">
    <label class="col-md-3 col-form-label" asp-for="Name"><span asp-localized-key="@AssetStatusesConstants.AssetStatusesGridTheadName"></span>&nbsp;<span class="required">*</span></label>
    <div class="col-sm-8">
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-localized-key="@AssetStatusesConstants.AssetStatusesGridTheadColor" class="col-md-3 col-form-label" asp-for="Color"></label>
    <div id="colorPickerContainer" class="col-sm-8">
        <input asp-for="Color" type="text" id="colorPickerInput"
 class="form-control" readonly placeholder="@LocalizationsConstants.SelectColor" style="background-color: @Model?.Color;"/>
        <div id="colorPicker"></div>
    </div>
</div>

<div class="form-group row">
    <div class="col-12 col-sm-8 offset-3 form-inline">
        <div class="custom-control custom-checkbox">
            @if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Edit)
            {
                @if (Model.IsDefault)
                {
                    <input disabled="disabled" type="checkbox" asp-for="IsDefault" class="custom-control-input" />
                    <input type="hidden" asp-for="IsDefault" class="custom-control-input" />
                }
                else
                {
                    <input type="checkbox" asp-for="IsDefault" class="custom-control-input" />
                }
            }
            else if (Model.ModeActionType == Group.Salto.Common.Enums.ModeActionTypeEnum.Create)
            {
                <input type="checkbox" asp-for="IsDefault" class="custom-control-input" />
            }
            <label class="custom-control-label" for="IsDefault"></label>
        </div>
        <label for="IsDefault">
            <span asp-localized-key="@AssetStatusesConstants.AssetStatusesGridTheadIsDefault"></span>
        </label>
    </div>
</div>

<div class="form-group row">
    <div class="col-12 col-sm-8 offset-3 form-inline">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="IsRetiredState" class="custom-control-input" />
            <label class="custom-control-label" for="IsRetiredState"></label>
        </div>
        <label for="IsRetiredState"><span asp-localized-key="@AssetStatusesConstants.AssetStatusesGridTheadIsRetiredState" asp-for="IsRetiredState"></span></label>

    </div>
</div>

<div class="form-group row text-right">
    <div class="col-12">
        <button type="reset" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "AssetStatuses")'">
            <span asp-localized-key="ActionsDetailsBtnCancel"></span>
        </button>
        <input id="btnSaveAssetStatuses" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>
