@using Group.Salto.SOM.Web.Models.AssetStatuses;
@using Group.Salto.SOM.Web.Models.Result;
@using Group.Salto.SOM.Web.Extensions;
@using Group.Salto.Common.Constants;
@using Group.Salto.Common.Constants.AssetStatuses;
@using Group.Salto.Common.Enums;

@model ResultViewModel<AssetStatusesViewModel>

@{
    ViewData["Title"] = @Html.GetLocalizedText(AssetStatusesConstants.AssetStatusesCreateTitle);
    Layout = "~/Views/Shared/_Layout.cshtml";
    var claimUserConfigurationId = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(AppIdentityClaims.UserId);
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-6">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2 asp-localized-key="AssetStatusesCreateTitle"></h2>
            </div>
            <div class="card-body">
                <form asp-controller="AssetStatuses" asp-action="Create" method="post" class="form-horizontal">
                    <partial name="_AssetStatusesForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/Bundle/bundle--colorPicker.js"></script>
    <script src="~/js/Common/authorization.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
                var initialColor ="#f1f1f1";
                var options = {
                    btnSelect : '@Html.GetLocalizedText(LocalizationsConstants.Select)',
                    btnCancel: '@Html.GetLocalizedText(LocalizationsConstants.CancelText)',
                    color: initialColor,
                    parent: app.calendar.constants.ColorPickerParent,
                    skin: app.calendar.constants.ColorPickerSkin,
                    input: app.calendar.constants.ColorPickerInput,
                }
                app.colorPicker.Init(options);
                var saveCreate = @Html.CanDoAction(claimUserConfigurationId, ActionGroupEnum.AssetStatus, ActionEnum.Create).ToString().ToLower();
                app.common.authorization.disable("btnSaveAssetStatuses", saveCreate);
            });
        })(jQuery);
    </script>
}