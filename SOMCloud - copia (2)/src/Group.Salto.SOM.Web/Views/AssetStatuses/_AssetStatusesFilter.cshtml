@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Actions
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.AssetStatuses

@model AssetStatusesFilterViewModel

<partial model="@Model.FilterHeader" name="_FilterHeader" />
<div class="collapse in" id="filterAssetStatuses">
    <form asp-action="Filter" asp-controller="AssetStatuses" method="post" id="filter-form" class="form-control">
        <partial model="Model" name="_PagerHiddens" />
        <partial model="Model" name="_MultiTableHiddens" />
        <div class="form-inline pt-2">
            <div class="col-12 col-sm-4">
                <div class="form-group row">
                    <label class="col-auto">
                        <span asp-localized-key="@ActionsConstants.ActionsDetailsName"></span>
                    </label>
                    <input type="text" asp-for="Name" id="ActionsFilterName" class="form-control"
                           placeholder="@Html.GetLocalizedText(ActionsConstants.ActionsDetailsName)" />
                </div>
            </div>

            <div class="col-12 col-sm-4">
                <div class="form-check-inline">
                    <div class="form-check-input">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" asp-for="IsRetiredState" class="custom-control-input" />
                            <label class="custom-control-label" for="IsRetiredState"></label>
                        </div>
                    </div>
                    <label class="dhxrb_label_checkbox" for="IsRetiredState">
                        <span asp-localized-key="@ActionsConstants.ActionsDetailsRetiredState"></span>
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="pull-right">
                    <br>
                    <button type="button" id="btnClear" class="btn btn-outline-danger" asp-localized-key="@LocalizationsConstants.ClearFilter" />
                    <button id="btnApplyFilter" class="btn btn-primary" name="btnApplyFilter" asp-localized-key="@LocalizationsConstants.ApplyFilter" />
                </div>
            </div>
        </div>
    </form>
</div>