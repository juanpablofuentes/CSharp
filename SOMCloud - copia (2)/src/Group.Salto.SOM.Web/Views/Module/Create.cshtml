@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Module
@using Group.Salto.SOM.Web.Models.Modules
@using Group.Salto.SOM.Web.Extensions
@using Group.Salto.SOM.Web.Models.Result
@using Group.Salto.Common.Enums

@model ResultViewModel<ModuleDetailViewModel>

@{
    var title = @Html.GetLocalizedText(ModuleConstants.ModuleCreatePageTitle);
    ViewData["Title"] = title;
    var claimUserConfigurationId = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(AppIdentityClaims.UserId);
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-9">
        <div class="card card-accent-warning">
            <div class="card-header">
                <h2 asp-localized-key="@ModuleConstants.ModuleCreatePageTitle"></h2>
            </div>
            <div class="card-body">
                <form asp-controller="Module" asp-action="Create/"  method="post" class="form-horizontal">
                    <partial name="_ModuleForm" model="Model?.Data" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/MultiSelect.js"></script>
    <script src="~/js/Common/authorization.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
                app.multiselect.Init('@Model?.Data?.ActionGroups.Name');
                var saveCreate = @Html.CanDoAction(claimUserConfigurationId, ActionGroupEnum.Modules, ActionEnum.Create).ToString().ToLower();
                app.common.authorization.disable("btnSaveModule", saveCreate);
            });
        })(jQuery);
    </script>
}