@using Group.Salto.Common.Constants
@using Group.Salto.Common.Constants.Module
@using Group.Salto.SOM.Web.Models.Modules
@using Group.Salto.SOM.Web.Extensions

@model ModuleDetailViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="card border-info">
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@ModuleConstants.ModuleDetailName"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Key"
                               placeholder="@Html.GetLocalizedText(ModuleConstants.ModuleDetailName)" />
                        <span asp-validation-for="Key" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">
                        <span asp-localized-key="@ModuleConstants.ModuleDetailDescription"></span><span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Description"
                               placeholder="@Html.GetLocalizedText(ModuleConstants.ModuleDetailDescription)" />
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <h4>
            <span asp-localized-key="@ModuleConstants.ModuleDetailActionGroups"></span>
        </h4>
        <partial name="_MultiSelectControl" for="@Model.ActionGroups" />
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <hr />
        <button asp-localized-key="@LocalizationsConstants.CancelText"
                type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Module")'"></button>
        <input id="btnSaveModule" type="submit" class="btn btn-success" value="@Html.GetLocalizedText(LocalizationsConstants.SaveText)" />
    </div>
</div>